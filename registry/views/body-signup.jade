div(class="row")
  div(class="col-lg-12")
  div(class="panel panel-primary")
    div(class="panel-heading")
      strong= t("app.signuptitle")
    div(class="panel-body")
      form(class="form-horizontal", role="form", ng-submit="signup()")
        div(class="form-group")
          label(for="email", class="col-sm-2 control-label")= t("app.signupemail")
          div(class="col-sm-10")
            input(type="email", class="form-control", id="email", name="email", placeholder=t("app.signupemail"), ng-model="email")
        div(class="form-group")
          label(for="password", class="col-sm-2 control-label")= t("app.signuppassword")
          div(class="col-sm-10")
            input(type="password", class="form-control", id="password", name="password", placeholder=t("app.signuppassword"), ng-model="password")
        div(class="form-group")
          div(class="col-sm-offset-2 col-sm-10")
            button(type="submit", class="btn btn-default")= t("app.signupbutton")